{
  "extends": "@bryce-loskie/tc/vue",
  "compilerOptions": {
    "paths": {
      "~/*": ["src/*"],
      "*": ["src/typing/*.d.ts"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*"
  ],
  "exclude": ["dist", "node_modules"]
}
